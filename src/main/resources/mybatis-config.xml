<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<properties resource="application.properties"/>
	
	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true"/>
	</settings>
	
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
			</dataSource>
		</environment>
	</environments>
	<mappers><!-- mappers태그 안에 내용이 없어도 형식은 있어야 한다. -->
		<!-- <mapper resource="kr/or/dgit/mybatis_code/mappers/studentMapper.xml" /> --> <!-- 실제 mapper파일이 있는 위치 -->
		<!-- <mapper class="kr.or.dgit.mybatis_code.mappers.StudentMapper"/> -->
		<!-- <package name="kr.or.dgit.mybatis_code.mappers"/> -->
	</mappers>
</configuration>